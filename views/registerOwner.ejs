<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registro</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="icon" href="/images/logod.png" type="image/x-icon">

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css"
    />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/3947aef1e2.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <header>
      <%- include('modules/navbar.ejs') %>
    </header>
    <main class="bg-fondo">
      <section class="padding-y-section formularios">
        <div class="d-flex flex-column align-items-center justify-content-center p-2">
          <div class="bg-fondo rounded p-3 px-5">
            <h2 class="animation-title">Regístrate</h2>
            <div class="subrayado"></div>

          </div>
          <form action="/owner/registerOwner" method="post" enctype="multipart/form-data">
            <div class="d-flex justify-content-end">
              <i 
              class="bi bi-x-circle-fill fs-3" 
              onclick="window.location.href='/'"
              ></i>
            </div>
            <div class="mb-3">
              <label for="inputName" class="form-label">Nombre</label>
              <input
                type="text"
                class="form-control"
                id="inputName"
                aria-describedby="emailHelp"
                name="name"
              >
            </div>
            <div class="mb-3">
              <label for="inputLastname" class="form-label">Apellidos</label>
              <input
                type="text"
                class="form-control"
                id="inputLastname"
                aria-describedby="emailHelp"
                name="last_name"
              >
            </div>
            <div class="mb-3">
              <label for="inputEmail" class="form-label">Email</label>
              <input
                type="text"
                class="form-control"
                id="inputEmail"
                aria-describedby="emailHelp"
                name="email"
              >
            </div>
            <div class="mb-3">
              <label for="inputName" class="form-label">Información</label>
              <input
                type="textarea"
                class="form-control"
                id="inputDescription"
                aria-describedby="emailHelp"
                name="description"
              >
            </div>
              <div class="mb-3">
                <label for="inputName" class="form-label">Teléfono</label>
                <input
                  type="text"
                  class="form-control"
                  id="inputPhone_number"
                  aria-describedby="emailHelp"
                  name="phone_number"
                >
              </div>
        
            <div class="mb-3">
              <label for="inputPassword" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                id="inputPassword"
                aria-describedby="password"
                name="password"
              >
            </div>
            <div class="mb-3">
              <label for="inputRepPassword" class="form-label">Repite Password</label>
              <input
                type="password"
                class="form-control"
                id="inputRepPassword"
                aria-describedby="rep password"
                name="repPassword"
              >
            </div>
            <div class="d-flex flex-row flex-start">
              <label for="img"><img style="width: 60px; height: 60px;" src="/images/logod.png" alt=""></label>
              
            <input type="file" id="img" name="img" hidden />
          </div>
            <p style="color: red;"><%= typeof message != 'undefined' ? message: null %></p>
        
            <button type="submit" class="btn-nav">Guardar registro</button>
            
        
          </form>
        </div>
      </section>
    </main>

    <%- include('modules/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>