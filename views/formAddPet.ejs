<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Formulario añadir mascota</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    
    <link rel="icon" href="/images/logod.png" type="image/x-icon">

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css"
    />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/3947aef1e2.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <header>
      <%- include('modules/navbar.ejs') %>
    </header>
    <main class="bg-fondo">
        <section class="padding-y-section formularios">
          <div class="d-flex flex-column align-items-center justify-content-center p-2">
              <div class="bg-fondo rounded p-3 px-5">
                <h2 class="animation-title">Añade una <span class="resaltar">mascota</span> a la familia</h2>
                <div class="subrayado"></div>
              </div>

                <form
                    class="d-flex flex-column gap-2"
                    action="/pet/addPetSelect"
                    enctype="multipart/form-data"
                    method="post"
                >
                <div class="d-flex justify-content-end">
                    <i 
                    class="bi bi-x-circle-fill fs-3" 
                    onclick="window.location.href='/'"
                    ></i>
                  </div>
                    <div class="d-flex flex-column">
                        <label for="">Nombre</label>
                        <input
                            type="text"
                            name="name"
                        >
                    </div>
                    <div class="d-flex flex-column">
                        <label for="">Especie</label>
                        <input
                            type="text"
                            name="species"
                        >
                    </div>
                    <div class="d-flex flex-column">
                        <label for="">Año de adopción</label>
                        <input
                            type="text"
                            name="year_adoption"
                        >
                    </div>
                    <div class="d-flex flex-column">
                      <label for="">Descripción</label>
                      <input
                          type="textarea"
                          name="description"
                      >
                  </div>
                  <div class="d-flex flex-row flex-start">
                      <label for="img"><img style="width: 60px; height: 60px;" src="/images/logod.png" alt=""></label>
                      
                    <input type="file" id="img" name="img" hidden />
                  </div>
                    <select name="owner_id">
                        <option disabled selected>Perfil del dueño</option>
                        <% result.forEach((elem)=>{ %>
                            <option value="<%= elem.owner_id %>"><%= elem.name %></option>
                        <% }) %>
                    </select>
                    <p style="color: red;"><%= typeof message != 'undefined' ? message : null  %></p>
                    <div class="d-flex gap-1">
                        <button class="btn-nav">Aceptar</button>
                        
                    </div>
                </form>
            </div>
        </section>
    </main>
    <%- include('modules/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>