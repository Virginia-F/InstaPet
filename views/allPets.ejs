<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Mascotas</title>

    <link rel="stylesheet" href="/stylesheets/style.css" />

    <link rel="icon" href="/images/logod.png" type="image/x-icon" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script src="https://kit.fontawesome.com/3947aef1e2.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <header><%- include('modules/navbar.ejs') %></header>

    <main class="bg-fondo">
      <section class="section-all-pets padding-y-section container-xxl">
        <div class="d-flex flex-column ms-5 py-5">
          <h2 class="animation-title">Conoce a nuestras <span class="resaltar">mascotas</span></h2>
          <div class="subrayado"></div>
        </div>
        <div class="d-flex flex-wrap justify-content-center gap-4">
          <% result.forEach((elem)=>{ %>
          <div class="card" style="width: 18rem">
            <img
              src="/images/pet/<%= elem.pet_img?elem.pet_img:'cat.png' %>"
              class="card-img-top"
              alt="foto avatar"
            />
            <div class="card-body body-card d-flex justify-content-between align-items-center">
              <span
                style="font-size: 1.4rem; font-weight: bold"
                
                ><%= elem.name %>
              </span>

              <a
                href="/owner/oneOwner/<%= elem.owner_id %>"
                class="btn-nav btn-ver text-decoration-none"
                >Ver m√°s</a
              >
            </div>
          </div>
          <% }) %>
        </div>
      </section>
    </main>
    <%- include('modules/footer') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
